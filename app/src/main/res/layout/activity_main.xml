    <TextView
        android:id="@+id/displayText"
        android:layout_width="1080px"
        android:layout_height="225dp"
         android:layout_gravity="right"
        android:padding="24dp"
        android:text="@string/question_text"
        android:textSize="150sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/bclear_button"
                    android:backgroundTint="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bclear_button" />
                <Button
                    android:id="@+id/bsin_button"
                    android:backgroundTint="@color/purp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bsin_button" />
                <Button
                    android:id="@+id/bcos_button"
                    android:backgroundTint="@color/purp"
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bcos_button" />
                <Button
                    android:id="@+id/bplus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bplus_button" />

            </TableRow>

<!--            shiffre=======================================-->
            <TableRow
                android:layout_width="wrap_content"
