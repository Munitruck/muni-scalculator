                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/b9_button" />
                <Button
                    android:id="@+id/bmoins_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bmoins_button" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <Button
                    android:id="@+id/b4_button"
                    android:backgroundTint="@color/black"
                    android:layout_width="270px"
                    android:layout_height="wrap_content"
                    android:text="@string/b4_button" />

                <Button
                    android:id="@+id/b5_button"
                    android:backgroundTint="@color/black"
                    android:layout_width="270px"
                    android:layout_height="wrap_content"
                    android:text="@string/b5_button" />

                <Button
                    android:id="@+id/b6_button"
                    android:backgroundTint="@color/black"
                    android:layout_width="270px"
